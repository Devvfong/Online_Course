<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> - Online Course Platform</title>
    <link href="/css/style.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
</head>
<body class="bg-gray-50 min-h-screen">
    <!-- Navigation -->
    <nav class="bg-white shadow-lg">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between h-16">
                <div class="flex items-center">
                    <a href="/" class="flex items-center">
                        <i class="fas fa-graduation-cap text-2xl text-primary mr-2"></i>
                        <span class="text-xl font-bold text-gray-800">CourseHub</span>
                    </a>
                </div>
                
                <div class="flex items-center space-x-4">
                    <a href="/" class="nav-link">Home</a>
                    <a href="/courses" class="nav-link">Courses</a>
                    <a href="/dashboard" class="nav-link active">Dashboard</a>
                    <a href="/admin/courses" class="nav-link">Manage Courses</a>
                    
                    <div class="relative group">
                        <button class="flex items-center space-x-2 text-gray-700 hover:text-primary">
                            <i class="fas fa-user-circle text-xl"></i>
                            <span><%= user.name %></span>
                            <i class="fas fa-chevron-down text-sm"></i>
                        </button>
                        <div class="absolute right-0 mt-2 w-48 bg-white rounded-md shadow-lg opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200 z-50">
                            <div class="py-1">
                                <div class="px-4 py-2 text-sm text-gray-500 border-b">
                                    <div class="font-medium"><%= user.name %></div>
                                    <div class="text-xs capitalize"><%= user.role %></div>
                                </div>
                                <a href="/dashboard" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">
                                    <i class="fas fa-tachometer-alt mr-2"></i>Dashboard
                                </a>
                                <form action="/auth/logout" method="POST" class="block">
                                    <button type="submit" class="w-full text-left px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">
                                        <i class="fas fa-sign-out-alt mr-2"></i>Logout
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </nav>

    <!-- Dashboard Header -->
    <section class="bg-white py-8 border-b">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex items-center justify-between">
                <div>
                    <h1 class="text-3xl font-bold text-gray-800">Admin Dashboard</h1>
                    <p class="text-gray-600 mt-2">Manage courses and monitor platform statistics</p>
                </div>
                <div class="text-right">
                    <div class="text-sm text-gray-500">Welcome back,</div>
                    <div class="text-lg font-medium text-gray-800"><%= user.name %></div>
                </div>
            </div>
        </div>
    </section>

    <!-- Stats Overview -->
    <section class="py-8">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
                <div class="card text-center">
                    <div class="bg-primary text-white w-16 h-16 rounded-full flex items-center justify-center mx-auto mb-4">
                        <i class="fas fa-book text-2xl"></i>
                    </div>
                    <div class="text-3xl font-bold text-gray-800 mb-2"><%= totalCourses %></div>
                    <div class="text-gray-600">Total Courses</div>
                </div>
                <div class="card text-center">
                    <div class="bg-success text-white w-16 h-16 rounded-full flex items-center justify-center mx-auto mb-4">
                        <i class="fas fa-users text-2xl"></i>
                    </div>
                    <div class="text-3xl font-bold text-gray-800 mb-2"><%= totalStudents %></div>
                    <div class="text-gray-600">Total Students</div>
                </div>
                <div class="card text-center">
                    <div class="bg-warning text-white w-16 h-16 rounded-full flex items-center justify-center mx-auto mb-4">
                        <i class="fas fa-user-graduate text-2xl"></i>
                    </div>
                    <div class="text-3xl font-bold text-gray-800 mb-2"><%= totalEnrollments %></div>
                    <div class="text-gray-600">Total Enrollments</div>
                </div>
                <div class="card text-center">
                    <div class="bg-secondary text-white w-16 h-16 rounded-full flex items-center justify-center mx-auto mb-4">
                        <i class="fas fa-dollar-sign text-2xl"></i>
                    </div>
                    <div class="text-3xl font-bold text-gray-800 mb-2">$<%= Math.floor(Math.random() * 10000) + 5000 %></div>
                    <div class="text-gray-600">Monthly Revenue</div>
                </div>
            </div>
        </div>
    </section>

    <!-- Dashboard Content -->
    <section class="pb-8">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
                <!-- Main Content -->
                <div class="lg:col-span-2">
                    <!-- Course Management -->
                    <div class="card mb-8">
                        <div class="flex items-center justify-between mb-6">
                            <h2 class="text-2xl font-bold text-gray-800">Course Management</h2>
                            <a href="/admin/courses/add" class="btn btn-primary">
                                <i class="fas fa-plus mr-2"></i>Add New Course
                            </a>
                        </div>
                        
                        <div class="overflow-x-auto">
                            <table class="min-w-full">
                                <thead>
                                    <tr class="border-b border-gray-200">
                                        <th class="text-left py-3 px-4 font-medium text-gray-700">Course</th>
                                        <th class="text-left py-3 px-4 font-medium text-gray-700">Category</th>
                                        <th class="text-left py-3 px-4 font-medium text-gray-700">Students</th>
                                        <th class="text-left py-3 px-4 font-medium text-gray-700">Price</th>
                                        <th class="text-left py-3 px-4 font-medium text-gray-700">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% courses.slice(0, 5).forEach(course => { %>
                                        <tr class="border-b border-gray-100 hover:bg-gray-50">
                                            <td class="py-3 px-4">
                                                <div>
                                                    <div class="font-medium text-gray-800"><%= course.title %></div>
                                                    <div class="text-sm text-gray-500">
                                                        <%= course.difficulty %> â€¢ <%= course.lessons %> lessons
                                                    </div>
                                                </div>
                                            </td>
                                            <td class="py-3 px-4">
                                                <span class="bg-gray-100 text-gray-700 px-2 py-1 rounded text-sm">
                                                    <%= course.category %>
                                                </span>
                                            </td>
                                            <td class="py-3 px-4">
                                                <span class="font-medium"><%= course.students %></span>
                                            </td>
                                            <td class="py-3 px-4">
                                                <span class="font-medium text-<%= course.price === 0 ? 'green' : 'primary' %>-600">
                                                    <%= course.price === 0 ? 'Free' : '$' + course.price %>
                                                </span>
                                            </td>
                                            <td class="py-3 px-4">
                                                <div class="flex space-x-2">
                                                    <a href="/admin/courses/<%= course.id %>/edit" 
                                                       class="text-primary hover:text-secondary">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                    <button class="text-red-600 hover:text-red-800 delete-btn" 
                                                            data-url="/admin/courses/<%= course.id %>/delete">
                                                        <i class="fas fa-trash"></i>
                                                    </button>
                                                </div>
                                            </td>
                                        </tr>
                                    <% }); %>
                                </tbody>
                            </table>
                        </div>
                        
                        <div class="mt-4 text-center">
                            <a href="/admin/courses" class="btn btn-secondary">
                                View All Courses
                            </a>
                        </div>
                    </div>
                    
                    <!-- Recent Activity -->
                    <div class="card">
                        <h2 class="text-2xl font-bold text-gray-800 mb-6">Recent Activity</h2>
                        <div class="space-y-4">
                            <div class="flex items-center p-4 bg-green-50 border border-green-200 rounded-lg">
                                <div class="bg-green-500 text-white w-10 h-10 rounded-full flex items-center justify-center mr-4">
                                    <i class="fas fa-user-plus"></i>
                                </div>
                                <div class="flex-1">
                                    <h3 class="font-medium text-gray-800">New student enrollment</h3>
                                    <p class="text-sm text-gray-600">Alice Johnson enrolled in "Introduction to JavaScript"</p>
                                </div>
                                <span class="text-xs text-gray-500">2 hours ago</span>
                            </div>
                            
                            <div class="flex items-center p-4 bg-blue-50 border border-blue-200 rounded-lg">
                                <div class="bg-blue-500 text-white w-10 h-10 rounded-full flex items-center justify-center mr-4">
                                    <i class="fas fa-book"></i>
                                </div>
                                <div class="flex-1">
                                    <h3 class="font-medium text-gray-800">Course completion</h3>
                                    <p class="text-sm text-gray-600">Student completed "Cybersecurity Fundamentals"</p>
                                </div>
                                <span class="text-xs text-gray-500">5 hours ago</span>
                            </div>
                            
                            <div class="flex items-center p-4 bg-yellow-50 border border-yellow-200 rounded-lg">
                                <div class="bg-yellow-500 text-white w-10 h-10 rounded-full flex items-center justify-center mr-4">
                                    <i class="fas fa-star"></i>
                                </div>
                                <div class="flex-1">
                                    <h3 class="font-medium text-gray-800">New course review</h3>
                                    <p class="text-sm text-gray-600">5-star review for "Python for Data Science"</p>
                                </div>
                                <span class="text-xs text-gray-500">1 day ago</span>
                            </div>
                        </div>
                    </div>
                </div>
                
                <!-- Sidebar -->
                <div>
                    <!-- Quick Actions -->
                    <div class="card mb-6">
                        <h3 class="text-lg font-bold text-gray-800 mb-4">Quick Actions</h3>
                        <div class="space-y-3">
                            <a href="/admin/courses/add" class="block w-full btn btn-primary">
                                <i class="fas fa-plus mr-2"></i>Add New Course
                            </a>
                            <a href="/admin/courses" class="block w-full btn btn-secondary">
                                <i class="fas fa-list mr-2"></i>Manage All Courses
                            </a>
                            <a href="/courses" class="block w-full btn btn-secondary">
                                <i class="fas fa-eye mr-2"></i>View Student View
                            </a>
                        </div>
                    </div>
                    
                    <!-- Top Courses -->
                    <div class="card mb-6">
                        <h3 class="text-lg font-bold text-gray-800 mb-4">Top Performing Courses</h3>
                        <div class="space-y-4">
                            <% courses.sort((a, b) => b.students - a.students).slice(0, 3).forEach((course, index) => { %>
                                <div class="flex items-center">
                                    <div class="bg-primary text-white w-8 h-8 rounded-full flex items-center justify-center text-sm font-medium mr-3">
                                        <%= index + 1 %>
                                    </div>
                                    <div class="flex-1">
                                        <h4 class="font-medium text-gray-800 text-sm"><%= course.title %></h4>
                                        <p class="text-xs text-gray-500"><%= course.students %> students</p>
                                    </div>
                                </div>
                            <% }); %>
                        </div>
                    </div>
                    
                    <!-- Course Categories -->
                    <div class="card">
                        <h3 class="text-lg font-bold text-gray-800 mb-4">Course Categories</h3>
                        <div class="space-y-3">
                            <% 
                                const categories = [...new Set(courses.map(c => c.category))];
                                categories.forEach(category => {
                                    const count = courses.filter(c => c.category === category).length;
                            %>
                                <div class="flex justify-between items-center">
                                    <span class="text-gray-600"><%= category %></span>
                                    <span class="bg-gray-100 text-gray-700 px-2 py-1 rounded text-sm">
                                        <%= count %>
                                    </span>
                                </div>
                            <% }); %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Footer -->
    <footer class="bg-gray-800 text-white mt-16">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
            <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
                <div>
                    <div class="flex items-center mb-4">
                        <i class="fas fa-graduation-cap text-2xl text-primary mr-2"></i>
                        <span class="text-xl font-bold">CourseHub</span>
                    </div>
                    <p class="text-gray-300">Your premier destination for IT education and professional development.</p>
                </div>
                <div>
                    <h3 class="text-lg font-semibold mb-4">Quick Links</h3>
                    <ul class="space-y-2">
                        <li><a href="/" class="text-gray-300 hover:text-white transition-colors">Home</a></li>
                        <li><a href="/courses" class="text-gray-300 hover:text-white transition-colors">Courses</a></li>
                        <li><a href="#" class="text-gray-300 hover:text-white transition-colors">About</a></li>
                        <li><a href="#" class="text-gray-300 hover:text-white transition-colors">Contact</a></li>
                    </ul>
                </div>
                <div>
                    <h3 class="text-lg font-semibold mb-4">Categories</h3>
                    <ul class="space-y-2">
                        <li><a href="/courses?category=Programming" class="text-gray-300 hover:text-white transition-colors">Programming</a></li>
                        <li><a href="/courses?category=Data Science" class="text-gray-300 hover:text-white transition-colors">Data Science</a></li>
                        <li><a href="/courses?category=Web Development" class="text-gray-300 hover:text-white transition-colors">Web Development</a></li>
                        <li><a href="/courses?category=Security" class="text-gray-300 hover:text-white transition-colors">Security</a></li>
                    </ul>
                </div>
                <div>
                    <h3 class="text-lg font-semibold mb-4">Contact Info</h3>
                    <ul class="space-y-2 text-gray-300">
                        <li><i class="fas fa-envelope mr-2"></i>info@coursehub.com</li>
                        <li><i class="fas fa-phone mr-2"></i>+1 (555) 123-4567</li>
                        <li><i class="fas fa-map-marker-alt mr-2"></i>123 Education St, Learning City</li>
                    </ul>
                </div>
            </div>
            <div class="border-t border-gray-700 mt-8 pt-8 text-center text-gray-300">
                <p>&copy; 2023 CourseHub. All rights reserved.</p>
            </div>
        </div>
    </footer>

    <script src="/js/main.js"></script>
</body>
</html>